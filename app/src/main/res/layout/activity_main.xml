<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.design.design.design.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorDanger"
        android:onClick="openDialog"
        android:text="Closse"
        android:textColor="@color/colorWhite"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/headerimage1"
        android:layout_toEndOf="@+id/headerimage1"
        android:id="@+id/button2" />

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:onClick="startLogin"
        android:text="@string/btn_start"
        android:textColor="@color/colorWhite"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/bluetooth"
        android:text="Bluetooth"
        android:layout_width="match_parent"
        android:textColor="@color/colorWhite"
        android:background="@color/colorFresh"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />

    <Button
        android:id="@+id/gotoplanets"
        android:textColor="@color/colorWhite"
        android:background="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:text="Planets"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bluetooth"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="26dp" />

    <Button
        android:id="@+id/gotofacebook"
        android:textColor="@color/colorWhite"
        android:background="@color/colorInfo"
        android:layout_width="wrap_content"
        android:text="Facebook"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/gotoplanets"
        android:layout_alignBottom="@+id/gotoplanets"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/gotofirebase"
        android:textColor="@color/colorWhite"
        android:background="@color/colorInfo"
        android:layout_width="wrap_content"
        android:text="Firebase"
        android:layout_height="wrap_content"

        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/gotofacebook"
        android:layout_alignStart="@+id/gotofacebook" />

    <Button
        android:id="@+id/gotocamera"
        android:textColor="@color/colorWhite"
        android:background="@color/colorSuccess"
        android:layout_width="wrap_content"
        android:text="Camera"

        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/gotofacebook"
        android:layout_alignBottom="@+id/gotofacebook"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/gotoanimations"
        android:textColor="@color/colorWhite"
        android:background="@color/com_facebook_button_background_color"
        android:layout_width="wrap_content"
        android:text="Animation"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/gotofirebase"
        android:layout_alignBottom="@+id/gotofirebase"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/gotonotifications"
        android:textColor="@color/colorWhite"
        android:background="@color/com_facebook_button_background_color"
        android:layout_width="wrap_content"
        android:text="Notices"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/gotofirebase"
        android:layout_alignBottom="@+id/gotofirebase"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/gotopanel"
        android:textColor="@color/colorWhite"
        android:background="@color/cardview_dark_background"
        android:layout_width="wrap_content"
        android:text="Panel"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gotofirebase"
        android:layout_alignLeft="@+id/gotofirebase"
        android:layout_alignStart="@+id/gotofirebase"
        android:layout_marginTop="44dp" />
</RelativeLayout>
