<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.design.design.design.FirebaseActivity">
    <TextView
        android:textSize="35dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/firebaseText"
        android:text="Wifi Manager"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/enable"
        android:background="@color/colorSuccess"
        android:textColor="@color/colorWhite"
        android:text="Enable Wifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firebaseText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp" />

    <Button
        android:id="@+id/disable"
        android:text="Disable Wifi"
        android:textColor="@color/colorWhite"
        android:background="@color/colorDanger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firebaseText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/panel"
        android:text="Back to panel"
        android:textColor="@color/colorWhite"
        android:background="@color/cardview_dark_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/disable"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/check"
        android:text="Check Wifi"
        android:textColor="@color/colorWhite"
        android:background="@color/colorInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firebaseText"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
